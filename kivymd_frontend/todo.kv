<CustomTextField>:
    line_color_normal: 0, 0, 0, 0.3
    line_color_focus: 0, 0, 0.5, 1
    helper_text_mode: "on_error"

BoxLayout:
    orientation: 'vertical'
    padding: "5dp"
    spacing: "5dp"
    size_hint: None, None
    size: "360dp", "480dp"
    pos_hint: {"center_x": 0.5, "center_y": 0.6}

    MDCard:
        orientation: 'vertical'
        padding: "20dp"
        spacing: "12dp"
        size_hint: None, None
        size: "480dp", "350dp"
        pos_hint: {"center_x": 0.5}
        elevation: 8
        md_bg_color: 1, 1, 1, 1
        radius: [20, 20, 20, 20]

        MDLabel:
            text: "Create New Task"
            halign: "center"
            theme_text_color: "Custom"
            text_color: 0, 0.5, 0.5, 1
            font_style: "H3"

        CustomTextField:
            id: task_title
            hint_text: "Task Title"
            mode: "rectangle"
            on_focus: if self.focus: self.line_color_focus = 0, 0, 0.5, 1

        CustomTextField:
            id: task_description
            hint_text: "Task Description"
            mode: "rectangle"
            on_focus: if self.focus: self.line_color_focus = 0, 0, 0.5, 1

        MDRaisedButton:
            text: "Submit"
            md_bg_color: 0, 0.5, 0.5, 1
            pos_hint: {"center_x": 0.5}
            on_release: app.add_task(task_title.text, task_description.text)
        Widget:
            size_hint_y: None
            height: "20dp"
